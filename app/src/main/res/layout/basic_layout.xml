<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.schoolbus.SystemActivity">

<LinearLayout
    android:id="@+id/activity_01"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:layout_marginTop="50dp"
    android:background="@drawable/myborder"
    >

    <TextView
        android:text="  参数设置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:src="@drawable/p11"
        android:id="@+id/log"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    />
</LinearLayout>

    <LinearLayout
        android:id="@+id/activity_02"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/activity_01"
        android:background="@drawable/myborder"
        >

        <TextView
            android:text="  用户管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/p11"
            android:id="@+id/log3"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_03"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/activity_02"
        android:background="@drawable/myborder"
        >

        <TextView
            android:text="  串口设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/p11"
            android:id="@+id/log2"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_04"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/activity_03"
        android:background="@drawable/myborder"
        >

        <TextView
            android:text="  云台设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/p11"
            android:id="@+id/log4"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_05"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/activity_04"
        android:background="@drawable/myborder"
        >

        <TextView
            android:text="  网络校时"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:src="@drawable/p11"
            android:id="@+id/log5"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        />
    </LinearLayout>
</RelativeLayout>

